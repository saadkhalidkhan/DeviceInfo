<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/height_width_10dp"
                app:cardUseCompatPadding="true">

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <TableRow
                        android:background="@color/colorPrimary"
                        android:gravity="start">

                        <TextView
                            style="@style/txtFeatureName"
                            android:text="@string/screen" />

                        <TextView
                            style="@style/txtFeatureStatus"
                            android:text="@string/feature_status" />

                    </TableRow>


                    <TableRow
                        android:background="@color/colorWhite"
                        android:gravity="start">

                        <TextView
                            style="@style/txtfeatureNameStyle"
                            android:text="@string/screen_size" />

                        <TextView
                            android:id="@+id/tv_screen_size"
                            style="@style/txtfeatureStyle" />

                    </TableRow>


                    <TableRow
                        android:background="@color/colorDriver"
                        android:gravity="start">

                        <TextView
                            style="@style/txtfeatureNameStyle"
                            android:text="@string/screen_physical_size" />

                        <TextView
                            android:id="@+id/tv_physical_size"
                            style="@style/txtfeatureStyle" />

                    </TableRow>


                    <TableRow
                        android:background="@color/colorWhite"
                        android:gravity="start">

                        <TextView
                            style="@style/txtfeatureNameStyle"
                            android:text="@string/default_screen_orientation" />

                        <TextView
                            android:id="@+id/tv_default_orientation"
                            style="@style/txtfeatureStyle" />

                    </TableRow>


                    <TableRow
                        android:background="@color/colorDriver"
                        android:gravity="start">

                        <TextView
                            style="@style/txtfeatureNameStyle"
                            android:text="@string/screen_total_width" />

                        <TextView
                            android:id="@+id/tv_screen_total_width"
                            style="@style/txtfeatureStyle" />

                    </TableRow>


                    <TableRow
                        android:background="@color/colorWhite"
                        android:gravity="start">

                        <TextView
                            style="@style/txtfeatureNameStyle"
                            android:text="@string/screen_total_height" />

                        <TextView
                            android:id="@+id/tv_screen_total_height"
                            style="@style/txtfeatureStyle" />

                    </TableRow>

                    <TableRow
                        android:background="@color/colorDriver"
                        android:gravity="start">

                        <TextView
                            style="@style/txtfeatureNameStyle"
                            android:text="@string/refresh" />

                        <TextView
                            android:id="@+id/tv_refresh_rate"
                            style="@style/txtfeatureStyle" />

                    </TableRow>

                    <TableRow
                        android:background="@color/colorWhite"
                        android:gravity="start">

                        <TextView
                            style="@style/txtfeatureNameStyle"
                            android:text="@string/name" />

                        <TextView
                            android:id="@+id/tv_screen_name"
                            style="@style/txtfeatureStyle" />

                    </TableRow>


                    <TableRow
                        android:layout_marginTop="10dp"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="start"
                            android:layout_weight=".9"
                            android:gravity="center|start"
                            android:text="@string/max_gpu_texture_size"
                            android:textColor="@color/secondary_text" />

                        <TextView
                            android:id="@+id/tv_max_gpu"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1.1"
                            android:gravity="center_vertical"
                            android:paddingLeft="20dp"
                            android:textColor="@color/primary_text"
                            tools:ignore="MissingPrefix" />
                    </TableRow>

                </TableLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/height_width_10dp"
                app:cardUseCompatPadding="true">

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <TableRow
                        android:background="@color/colorPrimary"
                        android:gravity="start">

                        <TextView
                            style="@style/txtFeatureName"
                            android:text="@string/density" />

                        <TextView
                            style="@style/txtFeatureStatus"
                            android:text="@string/feature_status" />

                    </TableRow>


                    <TableRow
                        android:background="@color/colorWhite"
                        android:gravity="start">

                        <TextView
                            style="@style/txtfeatureNameStyle"
                            android:text="@string/screen_display_bucket" />

                        <TextView
                            android:id="@+id/tv_display_bucket"
                            style="@style/txtfeatureStyle" />

                    </TableRow>


                    <TableRow
                        android:background="@color/colorDriver"
                        android:gravity="start">

                        <TextView
                            style="@style/txtfeatureNameStyle"
                            android:text="@string/screen_dpi" />

                        <TextView
                            android:id="@+id/tv_display_dpi"
                            style="@style/txtfeatureStyle" />

                    </TableRow>


                    <TableRow
                        android:background="@color/colorWhite"
                        android:gravity="start">

                        <TextView
                            style="@style/txtfeatureNameStyle"
                            android:text="@string/xdpi" />

                        <TextView
                            android:id="@+id/tv_xdpi"
                            style="@style/txtfeatureStyle" />

                    </TableRow>

                    <TableRow
                        android:background="@color/colorDriver"
                        android:gravity="start">

                        <TextView
                            style="@style/txtfeatureNameStyle"
                            android:text="@string/ydpi" />

                        <TextView
                            android:id="@+id/tv_ydpi"
                            style="@style/txtfeatureStyle" />

                    </TableRow>

                    <TableRow
                        android:background="@color/colorWhite"
                        android:gravity="start">

                        <TextView
                            style="@style/txtfeatureNameStyle"
                            android:text="@string/screen_logical_density" />

                        <TextView
                            android:id="@+id/tv_logical_density"
                            style="@style/txtfeatureStyle" />

                    </TableRow>

                    <TableRow
                        android:background="@color/colorDriver"
                        android:gravity="start">

                        <TextView
                            style="@style/txtfeatureNameStyle"
                            android:text="@string/screen_scaled_density" />

                        <TextView
                            android:id="@+id/tv_scaled_density"
                            style="@style/txtfeatureStyle" />

                    </TableRow>
                </TableLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                app:cardUseCompatPadding="true">

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <TableRow
                        android:background="@color/colorPrimary"
                        android:gravity="start">

                        <TextView
                            style="@style/txtFeatureName"
                            android:text="@string/resolution" />

                        <TextView
                            style="@style/txtFeatureStatus"
                            android:text="@string/feature_status" />

                    </TableRow>


                    <TableRow
                        android:background="@color/colorWhite"
                        android:gravity="start">

                        <TextView
                            style="@style/txtfeatureNameStyle"
                            android:text="@string/screen_usable_width" />

                        <TextView
                            android:id="@+id/tv_usable_width"
                            style="@style/txtfeatureStyle" />

                    </TableRow>

                    <TableRow
                        android:background="@color/colorDriver"
                        android:gravity="start">

                        <TextView
                            style="@style/txtfeatureNameStyle"
                            android:text="@string/screen_usable_height" />

                        <TextView
                            android:id="@+id/tv_usable_height"
                            style="@style/txtfeatureStyle" />

                    </TableRow>

                    <TableRow
                        android:background="@color/colorWhite"
                        android:gravity="start">

                        <TextView
                            style="@style/txtfeatureNameStyle"
                            android:text="@string/density_independent_width" />

                        <TextView
                            android:id="@+id/tv_independent_width"
                            style="@style/txtfeatureStyle" />

                    </TableRow>

                    <TableRow
                        android:background="@color/colorDriver"
                        android:gravity="start">

                        <TextView
                            style="@style/txtfeatureNameStyle"
                            android:text="@string/density_independent_height" />

                        <TextView
                            android:id="@+id/tv_independent_height"
                            style="@style/txtfeatureStyle" />

                    </TableRow>

                </TableLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>