<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="device_info.activity.HomeActivity">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:ignore="UselessParent">


                <TableRow
                    android:background="@color/colorPrimary"
                    android:gravity="start">

                    <TextView
                        style="@style/txtFeatureName"
                        android:text="@string/feature_name" />

                    <TextView
                        style="@style/txtFeatureName"
                        android:text="@string/feature_status" />

                </TableRow>


                <TableRow
                    android:background="@color/colorWhite"
                    android:gravity="start">

                    <TextView
                        style="@style/txtfeatureNameStyle"
                        android:text="@string/device_name" />

                    <TextView
                        android:id="@+id/txt_dvice_info"
                        style="@style/txtfeatureStyle" />

                </TableRow>


                <TableRow
                    android:background="@color/colorPrimary"
                    android:gravity="start">

                    <TextView
                        style="@style/txtfeatureNameStyle"

                        android:text="@string/device_model" />

                    <TextView
                        android:id="@+id/txt_model"
                        style="@style/txtfeatureStyle" />

                </TableRow>


                <TableRow
                    android:background="@color/colorWhite"
                    android:gravity="start">

                    <TextView
                        style="@style/txtfeatureNameStyle"
                        android:text="@string/device_manufacturer" />

                    <TextView
                        android:id="@+id/txt_manufacutrer"
                        style="@style/txtfeatureStyle" />

                </TableRow>


                <TableRow
                    android:background="@color/colorPrimary"
                    android:gravity="start">

                    <TextView
                        style="@style/txtfeatureNameStyle"
                        android:text="@string/device_devices" />

                    <TextView
                        android:id="@+id/txtDevice"
                        style="@style/txtfeatureStyle" />

                </TableRow>


                <TableRow
                    android:background="@color/colorWhite"
                    android:gravity="start">

                    <TextView
                        style="@style/txtfeatureNameStyle"
                        android:text="@string/hardware" />

                    <TextView
                        android:id="@+id/txt_hardware"
                        style="@style/txtfeatureStyle" />

                </TableRow>


                <TableRow
                    android:background="@color/colorPrimary"
                    android:gravity="start">

                    <TextView
                        style="@style/txtfeatureNameStyle"
                        android:text="@string/device_board" />

                    <TextView
                        android:id="@+id/txt_device_board"
                        style="@style/txtfeatureStyle" />

                </TableRow>


                <TableRow
                    android:background="@color/colorWhite"
                    android:gravity="start">

                    <TextView
                        style="@style/txtfeatureNameStyle"
                        android:text="@string/android_id" />

                    <TextView
                        android:id="@+id/txt_android_id"
                        style="@style/txtfeatureStyle" />

                </TableRow>


            </TableLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>
