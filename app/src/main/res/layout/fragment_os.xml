<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="device_info.activity.HomeActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp">

            <ImageView
                android:id="@+id/iv_os_ver_ic"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="center_horizontal"
                android:contentDescription="@null"
                android:src="@drawable/ic_android_logo" />


            <TextView
                android:id="@+id/tv_version_name"
                style="@style/textViewLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/height_width_10dp"
                android:textAllCaps="true" />

            <TextView
                android:id="@+id/tv_release_date"
                style="@style/textViewSimpleMediam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/height_width_10dp" />


        </LinearLayout>

    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:ignore="UselessParent">


                <TableRow
                    android:background="@color/colorPrimary"
                    android:gravity="start">

                    <TextView
                        style="@style/txtFeatureName"
                        android:text="@string/feature_name" />

                    <TextView
                        style="@style/txtFeatureName"
                        android:text="@string/feature_status" />

                </TableRow>


                <TableRow
                    android:background="@color/colorWhite"
                    android:gravity="start">

                    <TextView
                        style="@style/txtfeatureNameStyle"
                        android:text="@string/version" />

                    <TextView
                        android:id="@+id/tv_version"
                        style="@style/txtfeatureStyle" />

                </TableRow>


                <TableRow
                    android:background="@color/colorDriver"
                    android:gravity="start">

                    <TextView
                        style="@style/txtfeatureNameStyle"
                        android:text="@string/version_name" />

                    <TextView
                        android:id="@+id/tv_sdk_name"
                        style="@style/txtfeatureStyle" />

                </TableRow>


                <TableRow
                    android:background="@color/colorWhite"
                    android:gravity="start">

                    <TextView
                        style="@style/txtfeatureNameStyle"
                        android:text="@string/api_level" />

                    <TextView
                        android:id="@+id/tv_api_level"
                        style="@style/txtfeatureStyle" />

                </TableRow>


                <TableRow
                    android:background="@color/colorDriver"
                    android:gravity="start">

                    <TextView
                        style="@style/txtfeatureNameStyle"
                        android:text="@string/build_id" />

                    <TextView
                        android:id="@+id/tv_build_id"
                        style="@style/txtfeatureStyle" />

                </TableRow>


                <TableRow
                    android:background="@color/colorWhite"
                    android:gravity="start">

                    <TextView
                        style="@style/txtfeatureNameStyle"
                        android:text="@string/build_name" />

                    <TextView
                        android:id="@+id/tv_build_time"
                        style="@style/txtfeatureStyle" />

                </TableRow>


                <TableRow
                    android:background="@color/colorDriver"
                    android:gravity="start">

                    <TextView
                        style="@style/txtfeatureNameStyle"
                        android:text="@string/fingerprint" />

                    <TextView
                        android:id="@+id/tv_fingerprint"
                        style="@style/txtfeatureStyle" />

                </TableRow>


            </TableLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>
