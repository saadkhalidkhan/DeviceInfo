<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/height_width_10dp"
        app:cardUseCompatPadding="true">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TableRow
                android:background="@color/colorPrimary"
                android:gravity="start">

                <TextView
                    style="@style/txtFeatureName"
                    android:text="@string/feature_name" />

                <TextView
                    style="@style/txtFeatureName"
                    android:text="@string/feature_status" />

            </TableRow>


            <TableRow
                android:background="@color/colorWhite"
                android:gravity="start">

                <TextView
                    style="@style/txtfeatureNameStyle"
                    android:text="@string/connection_status" />

                <TextView
                    android:id="@+id/tv_connection_status"
                    style="@style/txtfeatureStyle" />

            </TableRow>


            <TableRow
                android:background="@color/colorDriver"
                android:gravity="start">

                <TextView
                    style="@style/txtfeatureNameStyle"
                    android:text="@string/data_type" />

                <TextView
                    android:id="@+id/tv_data_type"
                    style="@style/txtfeatureStyle" />

            </TableRow>


            <TableRow
                android:background="@color/colorWhite"
                android:gravity="start">

                <TextView
                    style="@style/txtfeatureNameStyle"
                    android:text="@string/network_type" />

                <TextView
                    android:id="@+id/tv_network_type"
                    style="@style/txtfeatureStyle" />

            </TableRow>


            <TableRow
                android:background="@color/colorDriver"
                android:gravity="start">

                <TextView
                    style="@style/txtfeatureNameStyle"
                    android:text="@string/ip_address" />

                <TextView
                    android:id="@+id/tv_ip_address"
                    style="@style/txtfeatureStyle" />

            </TableRow>

            <TableRow
                android:background="@color/colorWhite"
                android:gravity="start">

                <TextView
                    style="@style/txtfeatureNameStyle"
                    android:text="@string/mac_address" />

                <TextView
                    android:id="@+id/tv_mac_address"
                    style="@style/txtfeatureStyle" />

            </TableRow>


            <TableRow
                android:background="@color/colorDriver"
                android:gravity="start">

                <TextView
                    style="@style/txtfeatureNameStyle"
                    android:text="@string/ssid" />

                <TextView
                    android:id="@+id/tv_ssid"
                    style="@style/txtfeatureStyle" />

            </TableRow>


            <TableRow
                android:background="@color/colorWhite"
                android:gravity="start">

                <TextView
                    style="@style/txtfeatureNameStyle"
                    android:text="@string/link_speed" />

                <TextView
                    android:id="@+id/tv_link_speed"
                    style="@style/txtfeatureStyle" />

            </TableRow>


        </TableLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>